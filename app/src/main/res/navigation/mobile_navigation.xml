<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.dhimasdewanto.githubstars.view.main.view_all.ViewAllFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_view_all" >
        <action
            android:id="@+id/action_nav_home_to_detailActivity"
            app:destination="@id/detailActivity" />
    </fragment>
    <fragment
        android:id="@+id/nav_search"
        android:name="com.dhimasdewanto.githubstars.view.main.view_search.ViewSearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_view_search" >
        <action
            android:id="@+id/action_nav_search_to_detailActivity"
            app:destination="@id/detailActivity" />
    </fragment>
    <activity
        android:id="@+id/detailActivity"
        android:name="com.dhimasdewanto.githubstars.view.detail.DetailActivity"
        android:label="Detail"
        tools:layout="@layout/activity_detail" />
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.dhimasdewanto.githubstars.view.main.settings.SettingsFragment"
        android:label="Settings" />
</navigation>